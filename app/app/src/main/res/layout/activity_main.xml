<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F5F0F0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.davidjacobo.automaintenance.MainActivity"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_maintenance"
        android:layout_gravity="top"
        android:layout_width="370dp"
        android:layout_height="150dp"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/header_history"
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="70dip"
                />
            <TextView
                android:id="@+id/txtHeaderMaintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardview_maintenanceheader"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingLeft="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardview_maintenancesub"
                android:paddingLeft="6dp"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_alerts"
        android:layout_marginTop="8dp"
        android:layout_gravity="top"
        android:layout_width="370dp"
        android:layout_height="150dp"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/header_history"
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="70dip"
                />
            <TextView
                android:id="@+id/txtHeaderAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardview_alertsheader"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingLeft="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardview_alertssub"
                android:paddingLeft="6dp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_settings"
        android:layout_marginTop="8dp"
        android:layout_gravity="top"
        android:layout_width="370dp"
        android:layout_height="150dp"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/header_history"
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="70dip"
                />
            <TextView
                android:id="@+id/txtHeaderSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardview_settingsheader"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingLeft="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardview_settingssub"
                android:paddingLeft="6dp"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
